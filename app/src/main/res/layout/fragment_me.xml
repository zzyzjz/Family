<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hyphenate="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MeFragment"
    android:orientation="vertical">


    <com.hyphenate.easeui.widget.EaseTitleBar
        android:id="@+id/me_title_bar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/colorPrimary"
        hyphenate:titleBarBackground="@color/colorPrimary"
        hyphenate:titleBarTitle="@string/title_me"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#cccccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="100dp">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/me_iv_head"
            android:layout_gravity="center"
            android:padding="4dp"
            android:background="@drawable/border_dark"
            android:src="@drawable/head"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/me_btn_modify_head"
            android:text=">"
            android:layout_marginLeft="90dp"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/border_dark"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="40dp"
        >
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="nick"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/me_tv_nick"
            android:textSize="30sp"
            android:textColor="@color/holo_black"
            android:text="NICK"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/me_btn_modify_nick"
            android:layout_marginLeft="40dp"

            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/border_dark"
            android:text=" > "/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:paddingTop="40dp">
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/me_tv_id"
            android:text="ID"
            android:textSize="20sp"/>
    </LinearLayout>



    <Button
        android:id="@+id/me_logout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="60dp"
        android:text="退 出 登 录"
        android:background="@color/btn_logout_normal"/>



</LinearLayout>