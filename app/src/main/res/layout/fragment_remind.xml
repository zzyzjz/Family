<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:hyphenate="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".ui.RemindFragment"
    android:orientation="vertical">

    <com.hyphenate.easeui.widget.EaseTitleBar
        android:id="@+id/contact_title_bar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/colorPrimary"
        hyphenate:titleBarBackground="@color/colorPrimary"
        hyphenate:titleBarTitle="提 醒"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#cccccc" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.familyapplication.list.ListViewInScroll
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/remind_fragment_list"
            />

    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc" />

</LinearLayout>