<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyphenate="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.ContactFragment"
    android:orientation="vertical">

    <com.hyphenate.easeui.widget.EaseTitleBar
        android:id="@+id/contact_title_bar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/colorPrimary"
        hyphenate:titleBarBackground="@color/colorPrimary"
        hyphenate:titleBarTitle="@string/title_address_list"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#cccccc" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contact_btn_add_friend"
                android:layout_marginTop="3dp"
                android:background="@drawable/btn_long"
                android:text="添 加 联 系 人"

                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contact_btn_group"
                android:layout_marginTop="3dp"
                android:background="@drawable/btn_long"
                android:text="我 的 群 组"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contact_btn_add_user"
                android:text="ADD A USER"

                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contact_btn_add_contact"
                android:text="ADD A contact"


                />


            <!-- TODO: Update blank fragment layout -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="我的联系人"
                android:textSize="15sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#cccccc" />

            <!--联系人列表-->
            <com.example.familyapplication.list.ListViewInScroll
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/list_view"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc" />


        </LinearLayout>

    </ScrollView>





</LinearLayout>

