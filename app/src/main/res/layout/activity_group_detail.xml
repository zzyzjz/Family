<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GroupDetailActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical" >
        //返回键
        <include layout="@layout/ease_commom_back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/group_detail_group_name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/group_detail_add"
            android:text="+"
            android:textSize="30sp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorPrimary"
            android:layout_alignParentRight="true"

            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#cccccc" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp">

        </LinearLayout>
    </ScrollView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="群主"
        android:layout_marginVertical="2dp"
        />
    <com.example.familyapplication.GridViewInScroll
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/group_detail_owner"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="8dp"
        android:padding="5dp"
        android:background="@drawable/border_dark"
        android:numColumns="4"
        android:horizontalSpacing="6dp"
        android:verticalSpacing="2dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="群成员"
        android:layout_marginVertical="2dp"
        />
    <com.example.familyapplication.GridViewInScroll
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/group_detail_members"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="8dp"
        android:padding="5dp"
        android:background="@drawable/border_dark"
        android:numColumns="4"
        android:horizontalSpacing="6dp"
        android:verticalSpacing="2dp"
        />

    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="群ID"
        android:layout_marginVertical="2dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/group_detail_id"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginBottom="8dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="留言板"
        android:layout_marginVertical="2dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/group_detail_board"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/border_dark"
        android:layout_marginBottom="8dp"
        android:text="留言板..."
        android:minLines="1"
        android:padding="7dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/group_detail_exit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="60dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@color/btn_logout_normal"/>


</LinearLayout>